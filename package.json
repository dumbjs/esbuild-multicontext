{
  "name": "esbuild-multicontext",
  "description": "Minimal wrapper over esbuild's context API",
  "version": "0.15.0",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/esm/index.d.mts",
        "require": "./dist/cjs/index.d.cts"
      },
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.cjs"
    },
    "./watcher": {
      "types": {
        "import": "./dist/esm/watcher.d.mts",
        "require": "./dist/cjs/watcher.d.cts"
      },
      "import": "./dist/esm/watcher.mjs",
      "require": "./dist/cjs/watcher.cjs"
    },
    "./cjs": "./dist/cjs/index.cjs",
    "./esm": "./dist/esm/index.mjs",
    "./package.json": "./package.json"
  },
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.mjs",
  "types": "./dist/cjs/index.d.cts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsx build.mjs",
    "dev": "tsx build.mjs --dev",
    "fix": "prettier --write .",
    "next": "bumpp",
    "test": "uvu -r tsm",
    "test:ci": "c8 uvu -r tsm",
    "prepare": "npm run build"
  },
  "prettier": "@barelyhuman/prettier-config",
  "dependencies": {
    "@types/sinon": "^17.0.3",
    "chokidar": "^4.0.0",
    "defu": "^6.1.3",
    "esbuild": "^0.25.0",
    "sinon": "^19.0.2",
    "tiny-glob": "^0.2.9"
  },
  "devDependencies": {
    "@barelyhuman/prettier-config": "^2.0.2",
    "@types/node": "^22.0.0",
    "bumpp": "^10.0.1",
    "c8": "^10.1.2",
    "kleur": "^4.1.5",
    "prettier": "^3.1.0",
    "rollup": "^4.18.0",
    "rollup-plugin-dts": "^6.1.1",
    "tsc-prog": "^2.3.0",
    "tsm": "^2.3.0",
    "tsx": "^4.6.1",
    "typescript": "^5.5.3",
    "uvu": "^0.5.6"
  },
  "publishConfig": {
    "access": "public"
  }
}
